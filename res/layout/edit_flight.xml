                   android:layout_width="wrap_content"
   				   android:layout_height="wrap_content"
                 		android:textColor="#CC0000"/>
<TableRow>
    
    <Button
        android:id="@+id/edit_flight_save"
          android:width="220px"
        android:layout_height="wrap_content"
        android:text="@string/Save" />

    <Button
        android:id="@+id/edit_flight_cancel"
         android:width="220px"
        android:layout_height="wrap_content"
        android:text="@string/Cancel" />
    
</TableRow>
 
</TableLayout>
</ScrollView>