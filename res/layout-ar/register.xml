<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="8dip"
        android:text="@string/required"
        android:textColor="#FF0000"
        android:textSize="13dp" >
    </TextView>

    <!-- Mobile Code -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/auto"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="15dp" 
            android:autoText="true">
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/mobile_code" >
        </TextView>
    </LinearLayout>
    <!-- Mobile Number -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="0.94"
            android:gravity="right"
            android:inputType="number"
            android:textSize="15dp" >
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/mobile_number" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/validationCode"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="0.63"
            android:gravity="right"
            android:inputType="number"
            android:textSize="15dp" >
        </EditText>

        <Button
            android:id="@+id/sendValidation"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:onClick="OnClick_mobileValidate"
            android:text="@string/send_validation" >
        </Button>
    </LinearLayout>

    <!-- Nationality -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/autoNationality"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/nationality_nada" >
        </TextView>
    </LinearLayout>
    <!-- Passport Number -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/passNum"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:textSize="15dp" >
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/passport_number" >
        </TextView>
    </LinearLayout>

    <!-- Passport Photo -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/takePhoto"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:onClick="onClick_takePhoto"
            android:src="@drawable/camera_icon" >
        </ImageButton>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/passport_photo" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/pictureView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="center" >
    </ImageView>

    <!-- Register Button -->

    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:onClick="OnClick_register"
        android:text="@string/register" >
    </Button>

</LinearLayout>