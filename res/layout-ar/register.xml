<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:stretchColumns="1" >

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="8dip"
        android:text="@string/required"
        android:textColor="#FF0000"
        android:textSize="13dp" >
    </TextView>

    <TableRow >

        <!-- Mobile Code -->

        <AutoCompleteTextView
            android:id="@+id/auto"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="15dp" >
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dip"
            android:paddingRight="8dip"
            android:text="@string/mobile_code" >
        </TextView>
    </TableRow>

    <!-- Mobile Number -->

    <TableRow android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="right"
            android:inputType="number"
            android:textSize="15dp" >
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dip"
            android:text="@string/mobile_number" >
        </TextView>
    </TableRow>

    <TableRow >

        <EditText
            android:id="@+id/validationCode"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="right"
            android:inputType="number"
            android:textSize="15dp" >
        </EditText>

        <Button
            android:id="@+id/sendValidation"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="OnClick_mobileValidate"
            android:text="@string/send_validation" >
        </Button>
    </TableRow>

    <!-- Nationality -->

    <TableRow android:layout_marginTop="5dp" >

        <AutoCompleteTextView
            android:id="@+id/autoNationality"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="15dp" >
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dip"
            android:text="@string/nationality_nada" >
        </TextView>
    </TableRow>

    <!-- Passport Number -->

    <TableRow android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/passNum"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="right"
            android:textSize="15dp" >
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dip"
            android:text="@string/passport_number" >
        </TextView>
    </TableRow>

    <!-- Passport Photo -->

    <TableRow android:layout_marginTop="5dp" >

        <ImageButton
            android:id="@+id/takePhoto"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="right"
            android:onClick="onClick_takePhoto"
            android:src="@drawable/camera_icon" >
        </ImageButton>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dip"
            android:text="@string/passport_photo" >
        </TextView>
    </TableRow>

    <TableRow android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/pictureView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_span="2" >
        </ImageView>
    </TableRow>

    <!-- Register Button -->

    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:onClick="OnClick_register"
        android:text="@string/register" >
    </Button>

</TableLayout>